<launch>
    <!-- Play the bag file with the ROS clock -->
    <node 
        pkg    = "rosbag" 
        type   = "play" 
        name   = "play_bag" 
        args   = "/home/ubuntu/catkin_ws/src/hole_tracker/bags/quail_2025-01-13-15-29-36.bag --clock /home/ubuntu/catkin_ws/src/hole_tracker/bags/quail_2025-01-13-15-29-36.bag --rate 0.2" 
        output = "screen" 
    />

    <!-- Start yolo_node.py -->
    <node 
        pkg           = "hole_tracker" 
        type          = "node_detector_blob.py" 
        name          = "detector_node" 
        output        = "screen" 
        launch-prefix = "python3" 
    />

    <!-- Start tracker_node.py -->
    <node 
        pkg           = "hole_tracker" 
        type          = "node_tracker.py" 
        name          = "tracker_node" 
        output        = "screen" 
        launch-prefix = "python3" 
    />


    <!-- Open RViz with a specific configuration file -->
    <node 
        pkg    = "rviz" 
        type   = "rviz" 
        name   = "rviz" 
        args   = "-d $(find hole_tracker)/rviz/init_test.rviz" 
        output = "screen" 
    />
</launch>



